<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/cvTournamentPl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:elevation="10dp"
        android:orientation="vertical"

        app:cardBackgroundColor="#A3D6BD"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="#EDEFEE"
            android:elevation="10dp"
            android:orientation="vertical"
            app:cardCornerRadius="10dp">


            <ImageView
                android:id="@+id/playImage"
                android:layout_width="296dp"
                android:layout_height="214dp"
                android:layout_gravity="center"
                android:elevation="10dp"
                android:src="@drawable/quibanner"
                app:cardCornerRadius="10dp" />

            <TextView
                android:id="@+id/tvTournNameRcyPL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text="Tournament Name"
                android:textColor="#000"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvTournCategoryRcyPL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Category"
                android:textColor="#000"
                android:textSize="25sp" />


            <TextView
                android:id="@+id/tvTournDifficultyRcyPL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Difficulty"
                android:textColor="#000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tvTournStartDateRcyPL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Start Date"
                android:textColor="#000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tvTournEndDateRcyPL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="End Date"
                android:textColor="#000"
                android:textSize="25sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/editiconPL"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:src="@drawable/thumbsup" />

                 />

                <ImageView
                    android:id="@+id/playquiz"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:src="@drawable/playnoww" />

                />

            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>