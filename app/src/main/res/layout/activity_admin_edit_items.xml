<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >
    <!--    tools:context=".AdminAddTourn"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tvTournNameDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="EDIT Tournament"
            android:backgroundTint="#2196F3"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:background="@color/black"
            android:gravity="center"
            />


        <EditText
            android:id="@+id/etTournNameDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:hint="Name"
            android:scrollbars="vertical"
            android:textSize="15dp" />


        <EditText
            android:id="@+id/etTournStartDateDialog"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:hint="Start Date"
            android:textSize="15dp"
            android:gravity="top"
            android:scrollbars="vertical"

            />

        <EditText
            android:id="@+id/etTournEndDateDialog"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:hint="End Date"
            android:textSize="15dp"
            android:gravity="top"
            android:scrollbars="vertical"

            />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        >


        <Button
            android:id="@+id/btnTournUpdateDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#2196F3"
            android:layout_margin="5dp"
            android:text="update"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btnTournBackDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#2196F3"
            android:layout_margin="5dp"
            android:text="back"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:layout_weight="1"/>

    </LinearLayout>





</LinearLayout>